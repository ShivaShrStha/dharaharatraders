# Enable mod_rewrite for pretty/clean URLs and route requests to router.php
<IfModule mod_rewrite.c>
  RewriteEngine On
  RewriteBase /

  # If the request maps to an existing file or directory, serve it directly
  RewriteCond %{REQUEST_FILENAME} -f [OR]
  RewriteCond %{REQUEST_FILENAME} -d
  RewriteRule ^ - [L]

  # Otherwise forward the request to router.php (keep query string)
  RewriteRule ^(.*)$ /router.php [QSA,L]
</IfModule>

# Fallback DirectoryIndex (router.php will handle routes)
DirectoryIndex index.php router.php

# Prevent directory listing
Options -Indexes
# Dharahara Traders Website - improved .htaccess

# Turn on rewrite engine and set base
<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteBase /

    # Canonicalize host: redirect www to non-www (change if you prefer www)
    RewriteCond %{HTTP_HOST} ^www\.(.+)$ [NC]
    RewriteRule ^ https://%1%{REQUEST_URI} [R=301,L]

    # Force HTTPS (only if SSL is configured on the server)
    RewriteCond %{HTTPS} !=on
    RewriteCond %{HTTP:X-Forwarded-Proto} !https
    RewriteRule ^ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]

    # Redirect requests for physical .php files to clean URL (external redirect)
    RewriteCond %{THE_REQUEST} \s/+(.*?)(?:\.php)[\s?] [NC]
    RewriteRule ^ /%1 [R=301,L]

    # Serve existing files/directories directly
    RewriteCond %{REQUEST_FILENAME} -f [OR]
    RewriteCond %{REQUEST_FILENAME} -d
    RewriteRule ^ - [L]

    # Pretty routes (explicit mapping)
    RewriteRule ^about/?$ about.php [L,QSA]
    RewriteRule ^products/?$ products.php [L,QSA]
    RewriteRule ^shop/?$ shop.php [L,QSA]
    RewriteRule ^contact/?$ contact.php [L,QSA]
    RewriteRule ^product/?$ product.php [L,QSA]

    # Pretty product by ID: /product/123 -> product.php?id=123
    RewriteRule ^product/([0-9]+)/?$ product.php?id=$1 [L,QSA]
    # Category listing: /category/name -> shop.php?category=name
    RewriteRule ^category/([a-zA-Z0-9-]+)/?$ shop.php?category=$1 [L,QSA]

    # Fallback: route everything else to index.php (for SPA-like behavior / CMS)
    RewriteRule ^ index.php [L,QSA]
</IfModule>

# Security headers
<IfModule mod_headers.c>
    Header always set X-Frame-Options "SAMEORIGIN"
    Header always set X-Content-Type-Options "nosniff"
    Header always set Referrer-Policy "strict-origin-when-cross-origin"
    Header always set X-XSS-Protection "1; mode=block"
    # Consider adding a Content-Security-Policy tailored to your site
</IfModule>

# Protect sensitive files (Apache 2.4+ syntax)
<FilesMatch "^(?:\.env|.*\.db|config\.php)$">
    <IfModule mod_authz_core.c>
        Require all denied
    </IfModule>
    <IfModule !mod_authz_core.c>
        Order Allow,Deny
        Deny from all
    </IfModule>
</FilesMatch>

# Deny access to common backup/temp files
<FilesMatch "\.(bak|backup|old|tmp)$">
    <IfModule mod_authz_core.c>
        Require all denied
    </IfModule>
    <IfModule !mod_authz_core.c>
        Order Allow,Deny
        Deny from all
    </IfModule>
</FilesMatch>

# Browser caching for static files
<IfModule mod_expires.c>
    ExpiresActive On
    ExpiresByType text/css "access plus 1 month"
    ExpiresByType application/javascript "access plus 1 month"
    ExpiresByType image/png "access plus 1 month"
    ExpiresByType image/jpg "access plus 1 month"
    ExpiresByType image/jpeg "access plus 1 month"
    ExpiresByType image/gif "access plus 1 month"
    ExpiresByType image/svg+xml "access plus 1 month"
</IfModule>

# Gzip compression for supported content types
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/plain text/html text/xml text/css
    AddOutputFilterByType DEFLATE application/xml application/xhtml+xml application/rss+xml
    AddOutputFilterByType DEFLATE application/javascript application/x-javascript
</IfModule>

